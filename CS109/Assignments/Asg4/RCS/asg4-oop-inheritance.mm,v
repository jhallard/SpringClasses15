.VTCODE* 1 glRasterPos2i
.VTCODE* 1 glRotatef
.VTCODE* 1 glTranslatef
.VTCODE* 1 glVertex2f
.VTCODE* 1 glViewport
.VTCODE* 1 gluOrtho2D
